extends layout

block content

  h1 #{title}: #{book.title}

  if book_instances.length

    p.text-danger #[strong Delete the following book instances before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
    h4 Books Instances
    dl
      each instance in book_instances
        dt
          a(href=instance.url)  #{instance.imprint}
        dd ID:#{instance._id}

  else
    p Do you really want to delete this book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete
